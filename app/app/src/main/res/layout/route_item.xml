<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/route_item_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_map_24"
        android:contentDescription="@string/icon" />

    <TextView
        android:id="@+id/route_item_bin_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="@string/number_of_bins_on_route"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/route_item_icon"
        app:layout_constraintStart_toEndOf="@+id/route_item_icon" />

    <TextView
        android:id="@+id/route_item_bin_count_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/route_item_bin_count"
        app:layout_constraintTop_toTopOf="@+id/route_item_bin_count"
        tools:text="100" />

    <TextView
        android:id="@+id/route_item_routeID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/route_item_icon"
        app:layout_constraintTop_toTopOf="@+id/route_item_icon"
        tools:text="5ff1adc66b50ed25c8079395" />

</androidx.constraintlayout.widget.ConstraintLayout>